<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_study_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Group Name:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/groupNameET"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter study group name"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_subject_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject Name:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/subjectET"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter subject name"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_study_hybrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Hybrid Preference:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_hybrid_preference"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_study_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Time Preference:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_time_preference"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_learning_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learning Type:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_learning_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_create_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Study Group"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
